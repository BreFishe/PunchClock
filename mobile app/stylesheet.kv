
<MainWindow>:
    name: "main"
    uName: uName

    FloatLayout:
        cols:1

        TextInput:
            id: uName
            font_size: 30
            multiline: False
            pos_hint: {"x": 0.25, "top":0.9}
            size_hint: .5,.12

        Button:
            size_hint: .5,.12
            pos_hint: {"x": .25, "top": .8}
            text: "Clock in/out"
            on_release:
                root.punch() if root.checkInput() == 1 else root.invalidEntry()

        Button:
            size_hint: .5,.12
            pos_hint: {"x": .25, "top": .6}
            text: "View Past Clocks"
            on_release:
                root.update2ndName()
                root.manager.transition.direction = "left"
                app.root.current = "second"
        Button:
            size_hint: .5,.12
            pos_hint: {"x": .25, "top": .4}
            text: "Hours Worked"
            on_release:
                root.manager.transition.direction = "left"
                app.root.current = "third"



<SecondWindow>:
    name: "second"

    FloatLayout:

        Label:
            id: name_label
            pos_hint: {"x": .2, "top": 1}
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.width, None
            padding: 10, 10
            font_size: 24
            text: 'Whatever Name'


        ScrollView:
            do_scroll_y: False
            do_scroll_y: True
            pos_hint: {"x": .5, "top": 1}

            Label:
                id: list
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                padding: 10, 10
                font_size: 24
                text:


        Button:
            text: "Go Back"
            size_hint: .2,.1
            pos_hint: {"x": 0, "top": .15}
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"

<ThirdWindow>:
    name: "third"

    Button:
        text: "Go Back"
        size_hint: .2,.1
        pos_hint: {"x": 0, "top": .15}
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"

